[
  {
    "name": "${container_name}",
    "image": "hashlabs/sentry:latest",
    "portMappings": [
      {
        "containerPort": 9000,
        "hostPort": 80
      }
    ],
    "memoryReservation": 360,
    "cpu": 25,
    "environment": [
      {
        "name": "SENTRY_POSTGRES_HOST",
        "value": "${db_host}"
      },
      {
        "name": "SENTRY_POSTGRES_PORT",
        "value": "${db_port}"
      },
      {
        "name": "SENTRY_DB_NAME",
        "value": "${db_name}"
      },
      {
        "name": "SENTRY_DB_USER",
        "value": "${db_username}"
      },
      {
        "name": "SENTRY_DB_PASSWORD",
        "value": "${db_password}"
      },
      {
        "name": "SENTRY_SECRET_KEY",
        "value": "${sentry_secret_key}"
      },
      {
        "name": "SENTRY_EMAIL_HOST",
        "value": "${smtp_host}"
      },
      {
        "name": "SENTRY_EMAIL_PORT",
        "value": "${smtp_port}"
      },
      {
        "name": "SENTRY_EMAIL_PORT",
        "value": "${smtp_port}"
      },
      {
        "name": "GITHUB_APP_ID",
        "value": "${github_app_id}"
      },
      {
        "name": "GITHUB_API_SECRET",
        "value": "${github_api_secret}"
      },
      {
        "name": "SENTRY_EMAIL_PASSWORD",
        "value": "${smtp_password}"
      },
      {
        "name": "SENTRY_EMAIL_USE_TLS",
        "value": "on"
      },
      {
        "name": "SENTRY_SERVER_EMAIL",
        "value": "sentry@wobe.io"
      }
    ],
    "links": [
      "redis"
    ],
    "mountPoints": [
      {
        "sourceVolume": "sentry-${environment}",
        "containerPath": "/var/lib/sentry/files"
      }
    ]
  },
  {
    "name": "redis",
    "image": "redis:3.2",
    "memoryReservation": 120,
    "cpu": 10,
    "mountPoints": [
      {
        "sourceVolume": "sentry-${environment}",
        "containerPath": "/data"
      }
    ]
  },
  {
    "name": "sentry-worker",
    "image": "hashlabs/sentry:latest",
    "memoryReservation": 180,
    "cpu": 10,
    "environment": [
      {
        "name": "SENTRY_POSTGRES_HOST",
        "value": "${db_host}"
      },
      {
        "name": "SENTRY_POSTGRES_PORT",
        "value": "${db_port}"
      },
      {
        "name": "SENTRY_DB_NAME",
        "value": "sentry"
      },
      {
        "name": "SENTRY_DB_USER",
        "value": "${db_username}"
      },
      {
        "name": "SENTRY_DB_PASSWORD",
        "value": "${db_password}"
      },
      {
        "name": "SENTRY_SECRET_KEY",
        "value": "${sentry_secret_key}"
      },
      {
        "name": "SENTRY_EMAIL_HOST",
        "value": "${smtp_host}"
      },
      {
        "name": "SENTRY_EMAIL_PORT",
        "value": "${smtp_port}"
      },
      {
        "name": "SENTRY_EMAIL_USER",
        "value": "${smtp_username}"
      },
      {
        "name": "SENTRY_EMAIL_PASSWORD",
        "value": "${smtp_password}"
      },
      {
        "name": "SENTRY_EMAIL_USE_TLS",
        "value": "on"
      },
      {
        "name": "SENTRY_SERVER_EMAIL",
        "value": "sentry@wobe.io"
      }
    ],
    "links": [
      "redis"
    ],
    "command": [
      "run",
      "worker"
    ]
  },
  {
    "name": "sentry-cron",
    "image": "hashlabs/sentry:latest",
    "memoryReservation": 120,
    "cpu": 10,
    "environment": [
      {
        "name": "SENTRY_POSTGRES_HOST",
        "value": "${db_host}"
      },
      {
        "name": "SENTRY_POSTGRES_PORT",
        "value": "${db_port}"
      },
      {
        "name": "SENTRY_DB_NAME",
        "value": "sentry"
      },
      {
        "name": "SENTRY_DB_USER",
        "value": "${db_username}"
      },
      {
        "name": "SENTRY_DB_PASSWORD",
        "value": "${db_password}"
      },
      {
        "name": "SENTRY_SECRET_KEY",
        "value": "${sentry_secret_key}"
      },
      {
        "name": "SENTRY_EMAIL_HOST",
        "value": "${smtp_host}"
      },
      {
        "name": "SENTRY_EMAIL_PORT",
        "value": "${smtp_port}"
      },
      {
        "name": "SENTRY_EMAIL_USER",
        "value": "${smtp_username}"
      },
      {
        "name": "SENTRY_EMAIL_PASSWORD",
        "value": "${smtp_password}"
      },
      {
        "name": "SENTRY_EMAIL_USE_TLS",
        "value": "on"
      },
      {
        "name": "SENTRY_SERVER_EMAIL",
        "value": "sentry@wobe.io"
      }
    ],
    "links": [
      "redis"
    ],
    "command": [
      "run",
      "cron"
    ]
  }
]
